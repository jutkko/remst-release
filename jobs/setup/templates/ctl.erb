#!/bin/bash

RUN_DIR=/var/vcap/sys/run/setup
LOG_DIR=/var/vcap/sys/log/setup
TMUX_DIR=/var/vcap/packages/tmux-2.3
PIDFILE=${RUN_DIR}/pid

case $1 in

  start)
    mkdir -p ${RUN_DIR} ${LOG_DIR}
    chown -R vcap:vcap ${RUN_DIR} ${LOG_DIR}

    export PATH=$PATH:${TMUX_DIR}/bin
    tmux -f ${TMUX_DIR}/config/tmux-conf new -d -s remst
    echo $(pidof tmux) > ${PIDFILE}

    ;;

  stop)
    kill -9 $(cat ${PIDFILE})
    rm -f ${PIDFILE}

    ;;

  *)
    echo "Usage: ctl {start|stop}" ;;

esac
